@model LibraryManagement1.Data.Model.Customer
    <div class="row">
        <form asp-controller="Customer" asp-action="Create" method="post" class="form-horizontal" role="form">
            <h3>Create New Customer</h3>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Customer" asp-action="List" />
                <input class="btn btn-default" type="submit" value="Create" />

            </div>
        </form>
    </div>

